{
  "name": "safe-window-location",
  "description": "my doozie project",
  "version": "1.0.0",
  "author": "zhongguoxin <zhoguoxin@126.com> ()",
  "bugs": {
    "url": "https://github.com/forthedamn/safe-window-location/issues",
    "email": "zhoguoxin@126.com"
  },
  "contributors": [
    "zhongguoxin <zhoguoxin@126.com> ()"
  ],
  "dependencies": {
    "config": "^1.28.1",
    "typeis": "1.1.1",
    "xss-filters": "^1.2.7"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "auto-bind": "^1.1.0",
    "ava": "^0.22.0",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "latest",
    "husky": "^0.14.3",
    "jest": "^22.0.3",
    "lint-staged": "^4.0.4",
    "nyc": "^11.1.0",
    "prettier": "^1.6.1",
    "remark-cli": "^4.0.0",
    "remark-preset-github": "^0.0.6",
    "xo": "latest"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/forthedamn/safe-window-location",
  "keywords": [
    "safe-window-location",
    "lass"
  ],
  "license": "MIT",
  "main": "index.js",
  "jest": {
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "forceExit": true,
    "bail": true,
    "testEnvironment": "node"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/forthedamn/safe-window-location"
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true
  },
  "scripts": {
    "ci": "npm run test -- --coverage",
    "lint": "xo && remark . -qfo",
    "precommit": "lint-staged && npm test",
    "test": "NODE_CONFIG_DIR='./test/config' jest",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  }
}
